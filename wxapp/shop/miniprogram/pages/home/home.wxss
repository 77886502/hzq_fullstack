/* pages/home/home.wxss */
page {
  font-family:Arial;
  

}
view {
  box-sizing: border-box;
}
.header{
  width: 100%;
  height: 70rpx;
  background-color: #e43130;
}
.search {
  width: 90%;
  height: 50rpx;
  font-size: 14px;
  padding: 0 20rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 20rpx;
}
swiper {
  height: calc(100vw/720*277);
}
swiper image {
  width: 100vw;
}
/* 导航区域 */
.nav {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  width: 98%;
  margin: 0 7.5rpx;
  border: 0.5px solid #DCDCDC;
  justify-content: space-between;
  border-radius: 20rpx;
  box-shadow: 3.5rpx 3.5rpx 1rpx 	#F8F8FF;
  background-color: #fff;
  font-size: 12px;
  align-items: center;
}
.navItem{
  width: 15%;
  text-align: center;
}
.navItem image {
  width: 100%;
}
.ce{
  align-items: center;
}
.list {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color:	#F7F7F7;
  padding-top: 20rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 13px;
}
.box {
  width: 345rpx;
  border: 1px solid #F5F5F5;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 3.5rpx 3.5rpx 1rpx #d3d1d1;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.box image{
  width: 100%;
}
.box view {
  padding-left: 10rpx;
  line-height: 50rpx;
}
.name {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.price {
  color:#e43130;
}
